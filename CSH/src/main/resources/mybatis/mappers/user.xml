<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

	<!-- id 중복검사 -->
	<select id="idcheck" resultType="User" parameterType="java.lang.String">
		select *
		from user
		where id=#{id}
	</select>

	<!-- 회원가입 -->
	<insert id="join" parameterType="User">
		insert into user(id,pw,gender,birthday,image,type,authority)
		values(#{id},#{pw},#{gender},#{birthday},#{image},#{type},#{authority})
	</insert>
	
	<!-- 일반 회원 로그인 -->
	<select id="login" parameterType="java.lang.String" resultType="User">
		select *
		from user
		where id=#{id}
	</select>
</mapper>